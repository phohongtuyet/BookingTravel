@model CHXE.Models.KhachHang

@{
    ViewBag.Title = "Đăng Ký Tài Khoản";
}

<div>
    <div class="card mt-2" style="background:#333333">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>

            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Images/29.jpg" class="d-block w-100" alt="" width="100" height="550">
                </div>
                <div class="carousel-item">
                    <img src="~/Images/30.jpg" class="d-block w-100" alt="" width="100" height="550">
                </div>
                <div class="carousel-item ">
                    <img src="~/Images/4.jpg" class="d-block w-100" alt="" width="100" height="550">
                </div>
                <div class="carousel-item">
                    <img src="~/Images/2.jpg" class="d-block w-100" alt="" width="100" height="550">
                </div>
                <div class="carousel-item">
                    <img src="~/Images/17.jpg" class="d-block w-100" alt="" width="100" height="550">
                </div>


            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="card mt-3">
        <h5 class="card-header text-center">@ViewBag.Title</h5>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                

                <form>
                    <div class="form-group">
                        @Html.LabelFor(model => model.HoVaTen)
                        @Html.EditorFor(model => model.HoVaTen, new { htmlAttributes = new { @class = "form-control shadow-none col-md-12", @autocomplete = "off", @placeholder = "Nhập họ tên khách hàng" } })
                        @Html.ValidationMessageFor(model => model.HoVaTen, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.SDT)
                            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control shadow-none col-md-12", @autocomplete = "off", @placeholder = "Nhập số điện thoại" } })
                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.DiaChi)
                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control shadow-none col-md-12", @autocomplete = "off", @placeholder = "Nhập địa chỉ" } })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TenDangNhap)
                        @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control shadow-none col-md-12", @autocomplete = "off", @placeholder = "Nhập tên đăng nhập" } })
                        @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.MatKhau)
                            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control shadow-none col-md-12", @autocomplete = "off", @placeholder = "Nhập mật khẩu" } })
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.XacNhanMatKhau)
                            @Html.EditorFor(model => model.XacNhanMatKhau, new { htmlAttributes = new { @class = "form-control shadow-none col-md-12", @autocomplete = "off", @placeholder = "Nhập lại mật khẩu" } })
                            @Html.ValidationMessageFor(model => model.XacNhanMatKhau, "", new { @class = "text-danger" })
                        </div>


                    </div>

                    <div class="form-group mb-0 ">
                        <button type="submit" class="btn btn-dark">Đăng Ký</button> hoặc @Html.ActionLink("Quay về danh sách", "Index")
                    </div>
                </form>
            }

        </div>
    </div>
    <div class="card mt-3">
        <h5 class="card-header text-center">THƯƠNG HIỆU</h5>
        <div class="card-body">
            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">

                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="form-row">

                            <img src="~/Images/6.jpg" class="d-block col-md-3  " alt="" height="100" width="120">
                            <img src="~/Images/5.jpg" class="d-block col-md-3  " alt="" height="100" width="120">
                            <img src="~/Images/8.jpg" class="d-block col-md-3" alt="" height="100" width="120">
                            <img src="~/Images/7.png" class="d-block col-md-3" alt="" height="100" width="120">

                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="form-row">

                            <img src="~/Images/9.jpg" class="d-block col-md-3  " alt="" height="100" width="120">
                            <img src="~/Images/10.jpg" class="d-block col-md-3  " alt="" height="100" width="120">
                            <img src="~/Images/11.jpg" class="d-block col-md-3" alt="" height="100" width="120">
                            <img src="~/Images/12.jpg" class="d-block col-md-3" alt="" height="100" width="120">

                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="form-row">

                            <img src="~/Images/13.jpg" class="d-block col-md-3  " alt="" height="100" width="120">
                            <img src="~/Images/14.jpg" class="d-block col-md-3  " alt="" height="100" width="120">
                            <img src="~/Images/15.jpg" class="d-block col-md-3" alt="" height="100" width="120">
                            <img src="~/Images/16.jpg" class="d-block col-md-3" alt="" height="100" width="120">

                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="form-row">

                            <img src="~/Images/22.jpg" class="d-block col-md-3  " alt="" height="100" width="120">
                            <img src="~/Images/23.png" class="d-block col-md-3  " alt="" height="100" width="120">
                            <img src="~/Images/24.jpg" class="d-block col-md-3" alt="" height="100" width="120">
                            <img src="~/Images/25.jpg" class="d-block col-md-3" alt="" height="100" width="120">

                        </div>
                    </div>


                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="fas fa-angle-left fa-2x" style="color:#808080" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="fas fa-angle-right fa-2x" style="color:#808080" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="card mt-3">
        <h5 class="card-header text-center">SỰ KIỆN</h5>
        <div class="card-body">
            <div class="card-deck">
                <div class="card w-100 h-100">
                    <video role="presentation" crossorigin="anonymous" playsinline="" preload="auto" muted="" loop="" autoplay="" tabindex="-1" src="~/Images/1.mp4" style="width: 100%; height: 100%; object-fit: cover; object-position: center center; opacity: 1;"></video>


