@model IEnumerable<BookingTravel.Models.Tour>

@{
    ViewBag.Title = "Thông tin chi tiết của Tour";
}

<div class="card">
    @foreach (var item in Model)
    {


        <h5 class="card-header text-center font-weight-bold text-info" style="font-size:2.5rem">@item.TenTour</h5>

        <div id="carouselExampleControls" class="carousel slide mt-2" data-bs-ride="carousel">
            <div class="carousel-inner">
                @{
                    var first = true;
                }
                @foreach (var image in item.HinhAnh.Select(h => h.HinhAnh1))
                {
                    <div class="carousel-item @(first?Html.Raw("active"):Html.Raw(""))">
                        <img class="d-block w-100" src="~/@image" alt="">
                    </div>
                    first = false;
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

       

        <div class="card-body">
            <div class="card-body text-center">
                <h5 class=" font-italic font-weight-bold text-center">Địa điểm tham qua của Tour </h5>
                <p class="card-text ml-3">
                    @foreach (var diadanh in item.ChiTietDiaDiemThamQuan.Select(d => d.DiaDiemThamQuan.TenDiaDanh))
                    {
                        <i class="fas fa-map-marker-alt"></i> @diadanh <br>
                    }
                </p>
            </div>
            <div class="card-body text-center">
                <h5 class="font-italic font-weight-bold text-center">Phương tiện tham qua của Tour </h5>
                <p class="card-text ml-3">
                    @foreach (var pt in item.ChiTietPhuongTien.Select(d => d.PhuongTien.TenPhuongTien))
                    {
                        <i class="fas fa-angle-double-right"></i> @pt <br>
                    }
                </p>
            </div>
            <div class="card-body text-center">
                <h5 class="font-italic font-weight-bold text-center">Dịch vụ kèm theo tham qua của Tour</h5>
                <p class="card-text ml-3">
                    @foreach (var pt in @item.ChiTietDichVu)
                    {

                        if (pt.DichVu == 0)
                        {
                            <i class="fas fa-car"> Xe đưa đón</i>

                        }
                        else if (pt.DichVu == 1)
                        {
                            <i class="fas fa-utensils"> Bửa ăn</i>
                        }
                        else if (pt.DichVu == 2)
                        {
                            <i class="fas fa-ticket"> Vé tham quan</i>
                        }
                        else if (pt.DichVu == 3)
                        {
                            <i class="fas fa-check"> Bảo hiểm</i>
                        }
                        else
                        {
                            <i class="fas fa-flag">  Hướng dẫn viên</i>
                        }

                    }
                </p>
            </div>
                <a href="@Url.Action("Index")" class="btn btn-info d-flex justify-content-center">Quay về danh sách </a>

            </div>
            }
        </div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<style>
    /* Make the image fully responsive */
    .carousel-inner img {
        width: 50%;
        height: 100%;
    }

    #carouselExampleControls {
        width: 50%;
        height: 50%;     
        margin: auto;
    }

</style>
<script>

    var myCarousel = document.querySelector('#carouselExampleIndicators')
    var carousel = new bootstrap.Carousel(myCarousel, {
        interval: 500,
        wrap: false
    })
</script>
