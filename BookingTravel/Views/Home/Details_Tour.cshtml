@model BookingTravel.Models.Tour

@{
    ViewBag.Title = "TreeTravel";
}

<div class="card mt-2">
    <h5 class="card-header">@ViewBag.Title</h5>

    <h2 class="text-center">
        @Model.TenTour
    </h2>


    <div id="carouselExampleControls" class="carousel slide mt-2 " data-bs-ride="carousel">
        <div class="carousel-inner">
            @{
                var first = true;
            }
            @foreach (var image in Model.HinhAnh.Select(h => h.HinhAnh1))
            {
                <div class="mt-3 carousel-item @(first?Html.Raw("active"):Html.Raw(""))">
                    <img class="mx-auto d-block d-block w-75 h-50" src="~/@image" alt="">
                </div>
                first = false;
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

