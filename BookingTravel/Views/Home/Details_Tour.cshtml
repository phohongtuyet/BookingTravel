        <div class="card-text ml-3 p-3">
            @foreach (var pt in Model.ChiTietDichVu)
            {

                if (pt.DichVu == 0)
                {
                    <i class="fas fa-car"> Xe đưa đón</i>

                }
                else if (pt.DichVu == 1)
                {
                    <i class="fas fa-utensils"> Bửa ăn</i>
                }
                else if (pt.DichVu == 2)
                {
                    <i class="fas fa-ticket"> Vé tham quan</i>
                }
                else if (pt.DichVu == 3)
                {
