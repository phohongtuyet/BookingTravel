@model IEnumerable<BookingTravel.Models.DiaDiemThamQuan>

@{
    ViewBag.Title = "DS Địa Điểm Tham Quan";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">


<div class="card mt-3">
    <h5 class="card-header">@ViewBag.Title</h5>
    <div class="card-body">
        <p>
            <a class="btn btn-info" href="@Url.Action("Create")" role="button">Thêm mới</a>
        </p>
        <table class="table table-bordered table-hover table-sm mb-0">
            <tr>
                <th width="5%">#</th>
                <th>
                    @Html.DisplayNameFor(model => model.TenDiaDanh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tinh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KhachSan.TenKhachSan)
                </th>
               
                <th width="5%">Sửa</th>
                <th width="5%">Xóa</th>
            </tr>
            @{ int stt = 1; }
            @foreach (var item in Model)
            {
        <tr>
            <td>@stt</td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDiaDanh)
            </td>
            <td>
                @if (item.Tinh == 0)
                {
                    <span>An Giang</span>
                }
                else if (item.Tinh == 1)
                {
                    <span>Cần Thơ</span>
                }
                else if (item.Tinh == 2)
                {
                    <span>Kiên Giang</span>
                }
                else if (item.Tinh == 3)
                {
                    <span>Bạc Liêu</span>
                }
                else if (item.Tinh == 4)
                {
                    <span>Sóc Trăng</span>
                }
                else if (item.Tinh == 5)
                {
                    <span>Trà Vinh</span>
                }
                else
                {
                    <span>Long An</span>
                }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhachSan.TenKhachSan)
            </td>
            <td class="text-center">
                <a href="@Url.Action("Edit", new { id = item.ID })"><i class="fas fa-edit"></i></a>
            </td>
            <td class="text-center">
                <a href="@Url.Action("Delete", new { id = item.ID })"><i class="fas fa-trash-alt text-danger"></i></a>
            </td>
        </tr>
                stt++;
            }

        </table>
    </div>
</div>


